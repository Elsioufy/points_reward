.navbar.navbar-clarkapp
  .navbar-header
    .navbar-buttons
      %button.navbar-toggle.navbar-light{type: 'button', "data-toggle" => 'collapse', "data-target" => "#navbar_content"}
        %span.sr-only
          Toggle navigation
        %i.fa.fa-align-justify
  .collapse.navbar-collapse#navbar_content
    %ul.nav.navbar-nav.navbar-right
      - if user_signed_in?
        %li.nav-item.dropdown
          = link_to(t('user.logout'), destroy_user_session_path, method: :delete , class: 'btn btn-primary')
